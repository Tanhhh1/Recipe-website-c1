@model EProject.NETCore.Models.User

@section Styles {
    <link rel="stylesheet" href="~/css/changePassword.css" />
}

<section class="user_pass">
    <div class="pass_main">
        <div class="main_title">
            <a href="/User/UserInformation/@ViewData["UserId"]">
                <i class="fa-solid fa-chevron-left"></i>
            </a>
            <p>Change Password</p>
        </div>
        <div class="main_form">
            <form asp-action="ChangePassword" asp-controller="User" method="post">
                <div class="form_pass">
                    <label for="old_pass">Old Password</label>
                    <input type="password" name="old_pass" id="old_pass" placeholder="Enter your old password" />
                    @Html.ValidationMessage("old_pass", "", new { @class = "text-danger" })
                </div>
                <div class="form_pass">
                    <label for="new_pass">New Password</label>
                    <input type="password" name="new_pass" id="new_pass" placeholder="Enter your new password" />
                    @Html.ValidationMessage("new_pass", "", new { @class = "text-danger" })
                </div>
                <div class="form_pass">
                    <label for="re_pass">Re-enter Password</label>
                    <input type="password" name="re_pass" id="re_pass" placeholder="Re-enter your new password" />
                    @Html.ValidationMessage("re_pass", "", new { @class = "text-danger" })
                </div>
                <div class="form_btn">
                    <button type="submit">Change Password</button>
                </div>
            </form>
        </div>
    </div>
</section>
