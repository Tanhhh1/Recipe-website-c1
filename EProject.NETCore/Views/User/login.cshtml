@model EProject.NETCore.Models.LoginModel;
@section Styles {
    <link rel="stylesheet" href="~/css/login.css" />
}
<section class="signin">
    <div class="form-wrapper">
        <h2>Sign In</h2>
        <form action="/User/Login" method="post">
            <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
            <div class="form-control">
                <input type="text" id="username" class="input_control" placeholder=" " asp-for="Username">
                <label>Username</label>
                <div class="error">
                    <!-- Error username  -->
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
            </div>

            <div class="form-control">
                <input type="password" id="password" class="input_control" placeholder=" " asp-for="Password">
                <label>Password</label>
                <div class="error">
                    <!-- Error password  -->
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <button type="submit">Sign In</button>
        </form>
        <p>New membership? <a href="/user/register">Sign up now</a></p>
    </div>
</section>
@section Scripts {
    <script src="~/js/login.js"></script>
}
