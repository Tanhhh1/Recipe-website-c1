@using X.PagedList.Mvc.Core
@using X.PagedList
@model X.PagedList.IPagedList<EProject.NETCore.Models.Guidance>
@{
}
@section Styles {
    <link rel="stylesheet" href="~/css/recipe.css" />
    <link rel="stylesheet" href="~/css/paging.css" />
}
@{
    var notification = TempData["Notification"] as string;
}

@if (!string.IsNullOrEmpty(notification))
{
    @Html.Partial("notification", notification)
}
<section class="recipe">
    <div class="recipe_head">
        <div class="recipe_head_name">
            <h1>Tips</h1>
        </div>
        <div class="recipe_search">
            <form action="/tip/search" method="get">
                <label for="input_search">Search:</label>
                <input type="text" id="input_search" name="input_search" class="input_search" placeholder="Search...." value="@ViewBag.InputSearch">

                <input type="checkbox" name="input_free" id="input_free" class="input_check" value="1" @(ViewBag.InputFree == "1" ? "checked" : "")>
                <label for="input_free" class="free_label">Free</label>

                <input type="checkbox" name="input_premium" id="input_premium" class="input_check" value="0" @(ViewBag.InputPremium == "0" ? "checked" : "")>
                <label for="input_premium" class="pre_label">Premium</label>

                <button type="submit">Search</button>
            </form>
        </div>
    </div>
    <div class="recipe_main">
        <div class="recipe_list">
            @if (Model != null && Model.Any())
            {
                @foreach (var tip in Model)
                {
                    <div class="item_recipe">
                        <a href="/Tip/TipDetail/@tip.Id" class="link_recipe">
                            <div class="menu_card">
                                <div class="menu_image">
                                    <img src="@tip.Img">
                                </div>
                                <div class="small_card">
                                    <p class="small_vip">@((tip.IsFree) ? "Free" : "Vip")</p>
                                </div>
                                <div class="menu_info">
                                    <p>@tip.Title</p>
                                </div>
                                <div class="name_us">
                                    <p>- @(tip.User != null ? tip.User.Fullname : "Unknown") -</p>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            }
            else
            {
                <p style="color: white; font-weight: bold; font-size: 30px">No Tips Found</p>
            }
        </div>
        @Html.PagedListPager(Model, page => Url.Action("Search", new
            {
                input_search = ViewBag.InputSearch,
                input_free = ViewBag.InputFree,
                input_premium = ViewBag.InputPremium,
                page,
                pageSize = 8
            }),
                 new PagedListRenderOptions
        {
            UlElementClasses = new[] { "pagination" },
            LiElementClasses = new[] { "page-item" },
            PageClasses = new[] { "page-link" },
        })

        <div class="load-item">
            <button class="load-more">Load More</button>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/recipe.js"></script>
}
